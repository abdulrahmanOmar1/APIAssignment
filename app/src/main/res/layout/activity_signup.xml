<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mmm"
    android:orientation="vertical"
    tools:context=".SignupActivity">



    <TextView
        android:id="@+id/signupText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup Page"
        style="@style/textViewStyle"
        />

    <EditText
        android:id="@+id/nameID"
        android:hint="User Name"
        style="@style/editTextStyleSignup"
        android:inputType="text"></EditText>

    <EditText
        android:id="@+id/passID"
        android:hint="  Password"
        style="@style/editTextStyleSignup"
        android:text=""
        android:inputType="textPassword"  ></EditText>

    <EditText
        android:id="@+id/PhoneID"
        android:hint=" Phone"
        style="@style/editTextStyleSignup"
        android:inputType="phone"></EditText>
    <EditText
        android:id="@+id/emailID"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        style="@style/editTextStyleSignup"></EditText>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="180dp">
        <Button
            android:id="@+id/btnSignup"
            android:text="Signup"
            android:onClick="btnSignup"
            style="@style/btnStyle"></Button>
        <Button
            android:id="@+id/btnLogin"
            style="@style/btnStyle"
            android:onClick="btnlogin"
            android:text="Login"
            ></Button>

    </LinearLayout>

</LinearLayout>